<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col items-center">

  <!-- Profile Container -->
  <div class="w-full max-w-2xl mt-10 px-4">

    <!-- Welcome Message -->
    <div class="text-center mb-6">
      <h1 class="text-lg text-gray-700">
        Welcome, <span class="font-semibold text-gray-900"><%= user.username %></span>
      </h1>
    </div>

    <!-- Create Post Section -->
    <form action="/post" method="post">
    <div class="bg-white rounded-xl shadow-sm p-5 flex items-center space-x-3">
      <input 
        type="textarea" 
        placeholder="What's on your mind?" 
        class="flex-1 border border-gray-300 rounded-full px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-400" name="content"/>
      <button 
        type="submit" 
        class="bg-pink-500 hover:bg-pink-600 text-white text-sm px-4 py-2 rounded-full transition"
      >
        Submit
      </button>
    </div>
</form>
<div class="posts mt-10">
    <h1 class="text-zinc-400">Your Posts here!</h1>
    <div class="postcontainer mt-5">
        <% user.posts.reverse().forEach(function(post){ %>
            <div class="post w-1/3 border-2 border-slate-100 bg-slate-300 tracking-tighter text-sm p-3 ">
            <h4 class="text-cyan-500 pl-4
            mb-2 bg-stone-100 rounded-md "><%= user.username %></h4>
            <p class="tracking-tighter px-2"><%= post.content %></p>
            <div class="btns flex gap-3 mt-5 ml-2">
                <a href="/like/<%=post._id %>" class="text-red-600 "> Like</a>
                <a href="" class="text-zinc-500">Edit</a>
            </div>
        </div>
        <% }) %>
        
    </div>
</div>

    
    
    
  </div>

</body>
</html>
