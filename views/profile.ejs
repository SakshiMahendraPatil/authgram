<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-stone-300 min-h-screen flex flex-col items-center font-sans">

  <!-- Profile Container -->
  <div class="w-full max-w-5xl mt-10 px-4">

    <!-- Welcome Message -->
    <div class="text-center mb-6">
      <h1 class="text-xl text-gray-900 font-bold">
       Welcome , <span class="font-bold text-pink-600 ">  <%= user.username %></span>
      </h1>
    </div>

    <!-- Create Post Section -->
    <form action="/post" method="post">
      <div class="bg-white rounded-2xl shadow-md p-4 flex items-center space-x-3 border border-gray-200">
        <input
          type="textarea"
          placeholder="What's on your mind?"
          class="flex-1 border border-gray-300 bg-stone-100  rounded-full px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-400"
          name="content" />
        <button
          type="submit"
          class="bg-pink-500 hover:bg-pink-600 text-white text-sm px-5 py-2 rounded-full transition"
        >
          Submit
        </button>
      </div>
    </form>

    <!-- Posts Section -->
    <div class="posts mt-10 w-full">
      <h1 class="text-gray-800 font-medium mb-4 text-center">Your Posts</h1>
      <div class="postcontainer grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% user.posts.reverse().forEach(function(post){ %>
          <div class="post bg-purple-100 rounded-xl shadow-sm border border-gray-200 hover:shadow-lg  transition overflow-hidden">
            <!-- Username -->
            <div class="px-4 pt-3 pb-2 flex items-center justify-between">
              <h4 class="text-pink-600 font-semibold text-sm"><%= user.username %></h4>
            </div>

            <!-- Post content -->
            <div class="px-4 pb-3">
              <p class="text-gray-800 text-sm leading-relaxed break-words">
                <%= post.content %>
              </p>
            </div>

            <!-- Like + Edit Section -->
            <div class=" border-gray-100 px-4 py-2 flex justify-between items-center text-sm bg-purple-100">
              <small class="text-gray-500"><%=post.likes.length %> Likes</small>
              <div class="flex gap-4">
                <a href="/like/<%=post._id %>" class="text-pink-500 hover:text-pink-600 font-medium">
                  <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                </a>
                <a href="/edit/<%= post._id %>" class="text-gray-400 hover:text-gray-600 font-medium">Edit</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </div>

</body>


</html>
